{
  "dashboard": {
    "name": "BookHub Production Monitoring",
    "description": "Real-time monitoring dashboard for BookHub application",
    "widgets": [
      {
        "name": "Application Health",
        "type": "health",
        "position": {
          "x": 0,
          "y": 0,
          "width": 6,
          "height": 4
        },
        "config": {
          "endpoints": [
            "https://your-backend.azurewebsites.net/api/health",
            "https://your-frontend.azurewebsites.net"
          ],
          "checkInterval": 30
        }
      },
      {
        "name": "Response Time",
        "type": "metrics",
        "position": {
          "x": 6,
          "y": 0,
          "width": 6,
          "height": 4
        },
        "config": {
          "metric": "response_time",
          "timeRange": "1h"
        }
      },
      {
        "name": "Error Rate",
        "type": "metrics",
        "position": {
          "x": 0,
          "y": 4,
          "width": 6,
          "height": 4
        },
        "config": {
          "metric": "error_rate",
          "timeRange": "1h",
          "threshold": 5
        }
      },
      {
        "name": "Active Users",
        "type": "metrics",
        "position": {
          "x": 6,
          "y": 4,
          "width": 6,
          "height": 4
        },
        "config": {
          "metric": "active_users",
          "timeRange": "1h"
        }
      },
      {
        "name": "Security Alerts",
        "type": "security",
        "position": {
          "x": 0,
          "y": 8,
          "width": 12,
          "height": 4
        },
        "config": {
          "sources": [
            "github_security",
            "container_scan",
            "dependency_scan"
          ]
        }
      }
    ],
    "alerts": [
      {
        "name": "High Error Rate",
        "condition": "error_rate > 5%",
        "duration": "5m",
        "actions": [
          "email:admin@bookhub.com",
          "slack:devops-alerts"
        ]
      },
      {
        "name": "Application Down",
        "condition": "health_check_failed",
        "duration": "2m",
        "actions": [
          "email:admin@bookhub.com",
          "slack:devops-alerts",
          "pagerduty:critical"
        ]
      },
      {
        "name": "Security Vulnerability Detected",
        "condition": "security_scan_critical",
        "duration": "1m",
        "actions": [
          "email:security@bookhub.com",
          "slack:security-alerts"
        ]
      }
    ]
  }
} 